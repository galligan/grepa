#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# :A: ctx Comprehensive pre-push validation to match CI pipeline
echo "üîç Running pre-push validation..."

# Run tests
echo "üìã Running tests..."
pnpm vitest run || {
    echo "‚ùå Tests failed! Fix failing tests before pushing."
    exit 1
}

# Run typecheck
echo "üîç Type checking..."
pnpm typecheck || {
    echo "‚ùå Type checking failed! Fix type errors before pushing."
    exit 1
}

# Run build to ensure it compiles
echo "üî® Building project..."
pnpm build || {
    echo "‚ùå Build failed! Fix build errors before pushing."
    exit 1
}

# Check for temporary markers that shouldn't be pushed
echo "üîç Checking for temporary code markers..."
# Get the remote branch we're pushing to
remote_branch=$(git rev-parse --abbrev-ref --symbolic-full-name @{u} 2>/dev/null || echo "origin/main")
# Get list of source files that will be pushed
files_to_check=$(git diff --name-only HEAD "$remote_branch" -- '*.ts' '*.js' '*.tsx' '*.jsx')
if [ -n "$files_to_check" ]; then
    if echo "$files_to_check" | xargs grep -l ":A: tmp\|:A: temp" 2>/dev/null; then
        echo "‚ùå Found temporary code markers (:A: tmp or :A: temp)!"
        echo "Remove or resolve these before pushing."
        exit 1
    fi
fi

echo "‚úÖ All pre-push checks passed!"