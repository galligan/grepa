{
  "name": "@cairn/cli",
  "version": "0.1.0",
  "description": "Command-line interface for searching and managing Cairns in codebases",
  "type": "module",
  "bin": {
    "cairn": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@cairn/types": "workspace:*",
    "@cairn/core": "workspace:*",
    "@cairn/formatters": "workspace:*",
    "chalk": "^5.4.1",
    "commander": "^12.0.0"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch"
  }
}