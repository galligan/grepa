{
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-type-checked"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    // Enforce explicit return types on exported functions - disabled for now
    "@typescript-eslint/explicit-module-boundary-types": "off",
    
    // Disallow throwing anything other than Error objects
    "@typescript-eslint/no-throw-literal": "error",
    "no-throw-literal": "error",
    
    // Strict boolean expressions - disabled for now
    "@typescript-eslint/strict-boolean-expressions": "off",
    
    // Warn about always-true or always-false conditions - disabled for now
    "@typescript-eslint/no-unnecessary-condition": "off",
    
    // Disallow unsafe operations - disabled for now
    "@typescript-eslint/no-unsafe-assignment": "off",
    "@typescript-eslint/no-unsafe-member-access": "off",
    "@typescript-eslint/no-unsafe-call": "off",
    
    // Prevent common mistakes with Promises
    "@typescript-eslint/no-misused-promises": ["error", {
      "checksVoidReturn": {
        "attributes": false
      }
    }],
    
    // Existing rules
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/require-await": "off",
    "@typescript-eslint/restrict-template-expressions": "off"
  }
}