{
  "name": "grepa",
  "version": "0.2.0",
  "description": "Grep-anchor specification for making codebases discoverable",
  "keywords": [
    "grep",
    "grep-anchors",
    "code-navigation",
    "ai-navigation",
    "documentation",
    "developer-tools",
    "ripgrep",
    "code-search"
  ],
  "homepage": "https://github.com/galligan/grepa#readme",
  "bugs": {
    "url": "https://github.com/galligan/grepa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galligan/grepa.git"
  },
  "license": "MIT",
  "author": "Matt Galligan",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./dist/index.js",
  "bin": {
    "grepa": "./dist/cli/bin.js"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prerelease": "pnpm test && pnpm typecheck"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@8.15.0"
}