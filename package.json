{
  "name": "grepa",
  "version": "0.2.0",
  "description": "Grep-anchor specification for making codebases discoverable",
  "keywords": [
    "grep",
    "grep-anchors",
    "code-navigation",
    "ai-navigation",
    "documentation",
    "developer-tools",
    "ripgrep",
    "code-search"
  ],
  "homepage": "https://github.com/galligan/grepa#readme",
  "bugs": {
    "url": "https://github.com/galligan/grepa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galligan/grepa.git"
  },
  "license": "MIT",
  "author": "Matt Galligan",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --filter ./packages/* run dev",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "echo 'Lint temporarily disabled - see PR #26 feedback'",
    "typecheck": "tsc -b",
    "clean": "rm -rf dist && pnpm -r exec rm -rf dist",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prerelease": "pnpm test && pnpm typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "packageManager": "pnpm@8.15.9",
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
