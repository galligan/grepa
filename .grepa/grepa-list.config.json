{
  "_comment": "Configuration for grepa-list inventory generation",
  
  "anchor": ":ga:",
  
  "ignore": {
    "patterns": {
      "docs": {
        "description": "Ignore all documentation files",
        "globs": ["*.txt", "*.md", "*.markdown", "*.mdx"],
        "active": false
      },
      "md": {
        "description": "Ignore markdown files",
        "globs": ["*.md", "*.markdown", "*.mdx"],
        "active": false
      },
      "md*": {
        "description": "Ignore files with .md* extension",
        "globs": ["*.md*"],
        "active": false
      }
    },
    "custom": [],
    "respectGitignore": true
  },
  
  "examples": {
    "ignore": true,
    "detectCodeBlocks": true,
    "detectCodeFences": true,
    "detectHeadings": true,
    "detectInlineCode": true,
    "detectLinks": false,
    "detectBlockquotes": false,
    "detectHtmlComments": true,
    "detectTables": false,
    "detectFrontMatter": true
  },
  
  "output": {
    "file": ".grepa/grepa-list.json",
    "format": "json",
    "indent": 2,
    "includeMetadata": true
  },
  
  "display": {
    "showProgress": true,
    "showSummary": true,
    "topTagsCount": 5,
    "topFilesCount": 10
  },
  
  "search": {
    "followSymlinks": false,
    "maxFileSize": "10MB",
    "excludeVCS": true
  }
}